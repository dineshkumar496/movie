<% if @review.errors.any? %>
$("#err").html("<%= escape_javascript render 'shared/error', object: @review %>")
<% else %>
$("#reviews").append("<%= escape_javascript render 'reviews/review', r: @review %>")
$('.btn-close').click()
$("#notice-").html('<%= j render "shared/notice" %>')
$(".review-body").val('')
<% end %>

