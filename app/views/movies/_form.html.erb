<%= form_with(model: movie, local: m) do |form| %>

  <div id="err"></div>

  <div class="field mb-3">
    <%= form.label :name, :class => 'form-label' %>
    <%= form.text_field :name, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= form.label :release_date, :class => 'form-label' %>
    <%= form.date_field :release_date, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <% if movie.image.attached? %>
      <%= image_tag movie.image, size: '100x100', style: 'border-radius: 1%' %>
    <% else %>
      <div class="text-center">No Image found.</div>
    <% end %>
    <br />
    <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg', :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
