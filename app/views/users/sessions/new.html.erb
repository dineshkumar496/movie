
<div class="card container-md" style="width: 21rem; min-height: 26rem; height: auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <br><h1 class="text-center" style="color: blue">Login</h1><br>
    <p class="text-center" ,id="alert", style="color: #B00100"><%= alert %></p>
    <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class => "form-control", placeholder: "Email" %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "current-password",:class => "form-control", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3 form-check">
        <%= f.check_box :remember_me, :class => 'form-check-input' %>
        <%= f.label :remember_me, :class => 'form-check-label'%>
      </div>
    <% end %>
    <%= render "users/shared/links" %><br>
    <div class="actions">
      <%= f.submit "Log in" ,:class => 'btn btn-primary w-100' %>
    </div>
  <% end %><br />
  <div class="text-center m-1">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      New User?  <%= link_to "Sign up", new_registration_path(resource_name)  %><br />
    <% end %>
  </div>
</div>

