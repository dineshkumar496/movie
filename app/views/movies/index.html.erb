<p id="notice"><%= notice %></p>


<%=render 'movies/filter' %>

<h1>Movies</h1>

<% if @movies.any? %>
<table style="width: 100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Rating</th>
      <th>Review Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
     <%=render 'movie', movie: movie %>
    <% end %>
  </tbody>
</table>
<% else %>
  <h1 class="d-flex align-items-center justify-content-center w-100 h-100", style="margin-top: 10rem">No movies Available</h1>
  <%end %>
<br>

<%= link_to 'New Movie', new_movie_path if can? :create ,Movie %>


<%=will_paginate @movies %>