<p id="notice"><%= notice %></p>


<%=render 'movies/filter' %>



<h1>Movies</h1>

<% if @movies.any? %>
<table style="width: 100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Rating</th>
      <th>Review Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.average_rating %></td>
        <td><%= movie.review_count %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h1 class="d-flex align-items-center justify-content-center w-100 h-100", style="margin-top: 10rem">No movies Available</h1>
  <%end %>
<br>

<%= link_to 'New Movie', new_movie_path %>
