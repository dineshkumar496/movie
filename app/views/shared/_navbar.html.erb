<nav class="navbar navbar-fixed " >

  <div class="container-fluid bg-light">
    <div style="margin-top: -1rem">
      <%= link_to 'Movies', root_path, :class=>'navbar-brand' %>
    </div>
    <div class="d-flex ">
      <% if user_signed_in? %>
        <div class="d-flex", style="margin-right: 1rem;margin-top: .2rem">
          <%search %>
          <%= search_form_for @q, url: movies_path do |f| %>
            <div class="input-group mb-3">
              <%=f.search_field :name_cont ,:class=>"form-control", :placeholder=>'Search Movies'%>
              <%=f.submit :class=>'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <%= link_to 'Edit profile', edit_user_registration_path , :class => 'navbar-brand profile-edit', data: { bs_toggle: "modal", bs_target: "#exampleModal"},remote: true%>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'navbar-brand' %>

      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-brand' %>
        <%= link_to "Login", new_user_session_path , :class => 'navbar-brand'%>
      <% end %>
    </div>
  </div>
</nav>

