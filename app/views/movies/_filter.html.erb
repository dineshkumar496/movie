<div class=" float-end m-2", style="width: 23rem; height: 2.5rem">
  <%= form_tag(movies_path, method: :get) do %>
    <div class="input-group mb-3  float-end">
      <strong class="m-2">Filter By Date</strong>
      <%= label_tag :release_date, "From",:class => 'form-label m-2' %>
      <%= date_field_tag :release_date, params[:release_date],:class => 'form-control '%>
      <%= submit_tag "Filter" , :class => ' btn btn-sm btn-secondary'%>
    </div>
  <% end %>
</div>